<main>
  <h1 class="mb-4
  ">{{header}}</h1>
  {{#with purchase}}
    <section class="row">
      <div class='col-12 mb-3'>
        <div class='nav nav-tabs'>
          {{#each tabs}} 
          <div class='nav-item'>
            <a class='nav-link
            {{#if @first}}active{{/if}}' href='#'>{{this}}</a>
          </div>
          {{/each}}    
        </div>
      </div>
    </section>
    <section class="row">
      {{#with actionBlock}}
      <div class="col-4">
        {{#with input}}
        <input type="text" class="form-control form-control-sm" placeholder={{placeholder}}>
        {{/with}}
      </div>
      <div class="col-8 ps-0">
        {{#each buttons}}
        <a class='btn btn-sm
        {{#if isSuccess}}btn-success{{/if}}
        {{#if isOutline}}btn-outline-success{{/if}}
        {{#if isDanger}}btn-outline-danger{{/if}}
        ' href={{link}}>{{text}}</a>
        {{/each}}
      </div>
      {{/with}}
    </section>
    <hr class="my-3">
    <section class='mb-5'>
      {{#each itemList}}
      {{>purccaseItem}}
      {{/each}}
    </section>
  {{/with}}
  <hr class="my-3">
  {{#with userInfo}}
  <h2 class="mb-5">{{title}}</h2>
  <section class="mb-2">
  <div class="card">
    <div class="card-body row">
      {{#with profileData}}
      <h3 class="col-12 mb-3 card-title">{{title}}</h3>
      {{#with fullName}}
        <div class="col-12">
          <div class="row mb-3">
            <div class="col-4">
            {{#with surname}}
            <p class="mb-0">{{title}}</p>
            <p class="mb-0"><strong>{{value}}</strong></p>
            {{/with}}
            </div>
                <div class="col-4">
                {{#with name}}
                <p class="mb-0">{{title}}</p>
                <p class="mb-0"><strong>{{value}}</strong></p>
                {{/with}}
                </div>
            <div class="col-4">
            {{#with middleName}}
            <p class="mb-0">{{title}}</p>
            <p class="mb-0"><strong>{{value}}</strong></p>
            {{/with}}
            </div>
          </div>  
        </div>
      {{/with}}
      {{#with otherInfo}}
        <div class="col-12">
          <div class="row mb-3">
            <div class="col-4">
            {{#with birthday}}
            <p class="mb-0">{{title}}</p>
            <p class="mb-0"><strong>{{value}}</strong></p>
            {{/with}}
            </div>
                <div class="col-4">
                {{#with sex}}
                <p class="mb-0">{{title}}</p>
                <p class="mb-0"><strong>{{value}}</strong></p>
                {{/with}}
                </div>
            <div class="col-4">
            {{#with language}}
            <p class="mb-0">{{title}}</p>
            <p class="mb-0"><strong>{{value}}</strong></p>
            {{/with}}
            </div>
          </div>  
        </div>
      {{/with}}
    {{/with}}
      <div class="col-12">
        <div class="row">
           {{#each buttons}}
           <div class="col-4">
            <a href={{link}} class="btn btn-sm
            {{#if isPrimary}}btn-primary{{/if}}
            {{#if isSecondary}}btn-outline-secondary{{/if}}
            {{#if isDanger}}btn-outline-danger{{/if}}
            ">{{text}}</a>
           </div>
          {{/each}} 
        </div>
      </div>
    </div>
  </div>
  </section>
  <section class="mb-2">
  <div class="card">
    <div class="card-body row mb-0 pb-0">
      {{#with recipients}}
      <h3 class="col-12 mb-3 card-title">{{title}}</h3>
        <div class="col-12">
         <div class="row mb-3">
          {{#each users}}
            <div class="col-4">
            <p class="mb-0"><strong>{{name}}</strong></p>
            <p>{{phone}}</p>
            {{#with button}}
            <a href={{link}} class="btn btn-sm
            btn-primary">{{text}}</a>
            {{/with}}
            </div>
          {{/each}}     
        </div>
      </div>
      {{/with}}
    </div>
  </div>
  </section>
  <section class="mb-2">
  <div class="card">
    <div class="card-body row">
      {{#with contacts}}
      <h3 class="col-12 mb-3 card-title">{{title}}</h3>
      {{#with contactData}}
        <div class="col-12">
          <div class="row mb-3">
            <div class="col-4">
            {{#with phone}}
            <p class="mb-0">{{title}}</p>
            <p class="mb-0"><strong>{{value}}</strong></p>
            {{/with}}
            </div>
                <div class="col-4">
                {{#with additionalPhone}}
                <p class="mb-0">{{title}}</p>
                <p class="mb-0"><strong>{{value}}</strong></p>
                {{/with}}
                </div>
            <div class="col-4">
            {{#with email}}
            <p class="mb-0">{{title}}</p>
            <p class="mb-0"><strong>{{value}}</strong></p>
            {{/with}}
            </div>
          </div>  
        </div>
      {{/with}}
      
    {{/with}}
      <div class="col-12">
        <div class="row">
           {{#each buttons}}
           <div class="col-4">
            <a href={{link}} class="btn btn-sm
            {{#if isPrimary}}btn-primary{{/if}}
            {{#if isSecondary}}btn-outline-secondary{{/if}}
            {{#if isDanger}}btn-outline-danger{{/if}}
            ">{{text}}</a>
           </div>
          {{/each}} 
        </div>
      </div>
    </div>
  </div>
  </section>
  {{/with}}
</main>