<main class='row'>
  <section class='col-12'>
   {{>breadcrumb}}
  </section>
  <section class="col-12">
    {{#with newsData}}
    <div class="article mt-4">
      <div class="card mb-4">
      <img class="img-top" src={{photo}} alt="top">
      </div>
      <div class="article-body">
        {{#with head}}
          <div class="article-title">
            <h2>{{heading}}</h2>
            <p>{{description}}</p>
          </div>
        {{/with}}
        
        {{#each body}}
        <h3>{{title}}</h3>
        <p>{{text}}</p>
        {{/each}}
      </div>
    </div>
    {{/with}}
  </section>
  <hr class='my-5' />
  <section class="row">
    {{#with newsOtherBlock}}
    <h3 class='text-center m-0'>{{title}}</h3>
    {{#each cards}}
    <div class="col-3 p-1">
      {{>shoppost}}
    </div>
    {{/each}}
    {{/with}}
  </section>
  <hr class='my-5' />
  <section class="row">
    {{#with service}}
    {{>shopaction}}
    {{/with}}
  </section>
</main>