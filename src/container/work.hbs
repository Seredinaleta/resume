{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}


    {{#with main}}
    <main>
        <section>
            <h1 class="my-5 text-center display-3">{{>title data='Work history' big=true}}</h1>
           
            <div>
                <ul>
               {{#each works}}
                <li class="row">
                    <div class="display-6 mb-3 col-12">{{position}}</div>

                    

                    <div class="col-3 mb-3">
                        {{duration.from}} - 
                        {{#if duration.to}}
                            {{duration.to}}
                        {{else}}
                         present 
                        {{/if}}
                    </div>

                    
                    {{#with company}}
                    {{#if url}}
                    <div class="col-3 mb-3">{{>link text=name href=url blank=true noline=true}}</div>
                    {{else}}
                    <div><b>{{name}}</b></div>
                    {{/if}}
                    {{/with}}
                    <br>
                    <br>
                    {{#unless projects}}{{else}}

                    <div><strong>Projects ({{projectAmount}})</strong></div>
                    <br>
                    <ul>
                        {{#each projects}}
                        <li >
                            <div>{{>link text=name href=url blank=true noline=true}}
                            </div>
                            <br>
                            <div>
                                <p>{{about}}</p>
                            </div>
                            <br>
                            <div ><em>Project stacs ({{stackAmount}})</em></div>
                            <br>
                            <ul>
                                {{#each stacks}}
                                <li class="col-3">{{name}}</li>
                                {{/each}}
                            </ul>
                            <br>
                            <div><em>Project awards ({{awardAmount}})</em></div>
                            <br>
                            <ul>
                                {{#each awards}}
                                <li>{{name}}</li>
                                {{/each}}
                            </ul>
                        </li>
                        <br>
                        {{/each}}
                    </ul>
                    {{/unless}}
                </li>
                <br>
               {{/each}}
               </ul>
            </div>
        </section>
        
    </main>
    {{/with}}
    



