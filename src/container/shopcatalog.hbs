<main class='row'>
  {{>breadcrumb}}
<h1 class="my-3">{{header}}</h1>
{{#each sortBlock}}
<div class="col-3">
  <select class='form-select form-select-sm mb-5'name="sortBlock" >
    <option selected>{{placeholder}}</option>
    {{#each options}}
    <option value={{value}}>{{text}}</option>
    {{/each}}
  </select>
</div>
{{/each}}
{{#with filterBlock}}
<aside class="col-4 ">
  <div class="card">
    <div class="card-body">
      <section>
      {{#with sellers}}
      <p>{{title}}</p>
        {{#each list}}
        <div class="form-check">
          <input class="form-check-input" name={{sellers}} type="checkbox">
          <label for={{sellers}} class="form-check-label">{{value}}</label>
        </div>
        {{/each}}
      {{/with}}
      </section>
      <hr class="my-3">
      <section>
        {{#with brands}}
          <label for="" class="form-label">{{title}}</label>
          {{#with input}}
          <input type="text" class="form-control mb-3" placeholder={{placeholder}}>
          {{/with}}
          {{#each options}}
          <div class="form-check ps-0">
            <input type="checkbox" class="form0check-input">
            <label for="options" class="form-check-label">{{value}}</label>
          </div>
          {{/each}}
        {{/with}}
      </section>
      <hr class="my-3">
      <section>
        {{#with price}}
        <label for="" class="form-label">{{title}}</label>
        {{#with range}}
        <input type="text" class="form-control mb-3" placeholder={{from}}>
        <input type="text" class="form-control mb-3" placeholder={{to}}>
        {{/with}}
        {{#with button}}
        <a href={{link}} class="btn btn-sm btn-outline-secondary">{{text}}</a>
        {{/with}}
        {{/with}}
      </section>
      <hr class="my-3">
      <section>
        {{#each filterList}}
        <p>{{title}}</p>
        {{#each options}}
        <div class="form-check mb-2">
          <input class="form-check-input"  type="checkbox">
          <label class="form-check-label">{{value}}</label>
        </div>
        {{/each}}
        {{#unless @last}}
        <hr class="my-3">
        {{/unless}}
        {{/each}}
      </section>
    </div>
  </div>
</aside>
{{/with}}
<section class="col-8">
  <div class="row">
    {{#each goodsList}}
      {{>catalogItem}}
    {{/each}}
  </div>
</section>
<section class="col-12 mt-5">
  {{#with service}}
  {{>shopaction}}
  {{/with}}
</section>
</main>