{{!
Це код container файлу для skills сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/skills"
}}

<div>
    {{#with main}}
  <main>
    <section class="mb-5">
        {{>title data='All skills' big=true}}
      <ul class="row">
        {{#each skills}}
        <li class="col-4">
          {{name}}{{#if point includeZero=true }} ({{point}}){{/if}}
          {{#if isTop}} (Favorite) {{/if}}
          {{#unless point includeZero=true}} - не вивчаємо {{/unless}} 
          {{#unless point}}
              {{#if point includeZero=true}} - в процесі вивчення {{/if}}
          {{/unless}} 
        </li>
        {{/each}}
      </ul>
    </section>
    <section>
      {{>title data='My hobbies'}}
      <ol>
        {{#each hobbies}}
        <li>
          {{name}}
          {{#if isMain}}(Favorite){{/if}}
        </li>
        {{/each}}
      </ol>
    </section>
  </main>
    {{/with}}
</div>

