<div>
  <main>
    <header class="mb-5">
      {{#with program}}
        {{#with excursion}}  
          <h1>{{name}}</h1>
          <div><em>{{#with location}}{{city}}, {{country}} {{/with}}: {{date}}</em></div>
    </header>
        <section>
          {{#each program}}
          <ul>
            <li>
              <div class="mb-3">{{>title data=name big=true}}</div>
              <div class="mb-3">Type: {{type}} | Duration: {{duration}} hours</div>
              {{#with details}}
                {{#with museum}}
                  {{>title data=name}}
                  {{#with location}}
                  <div><address>{{address}}, {{city}}, {{country}}  </address></div>
                  {{/with}}
                  
                  {{#each exhibits}}
                  <ul>
                    <li class="mb-3">
                      <div><b>{{name}}</b> {{artist}}</div>
                      <div><em>{{description}}</em></div>
                      <div>{{#if audio_guide}} audio-guide{{/if}}</div>
                      {{!-- <hr> --}}
                    </li>
                  </ul>
                  {{/each}}
                {{/with}}
                {{#with venue}}
                  {{>title data=name}}
                      {{#with location}}
                    <div class="mb-3"><address>{{address}}, {{city}}, {{country}}</address></div>
                    
                      {{/with}}
                {{/with}}
                  {{#each performers}}
                    <ul>
                      <li class="mb-3">
                        <div><b>{{name}}</b></div>
                        <div><em>{{type}}</em></div>
                        
                      </li>
                    </ul>
                    {{/each}}
                {{#with guide}}
                <div><b>Guide: {{name}} {{language}} Rating: {{rating}}</b></div>
                {{/with}}
              {{/with}}
            </li>
          </ul>
          {{/each}}
        </section>
        {{/with}}
      {{/with}}
  </main>
</div>

