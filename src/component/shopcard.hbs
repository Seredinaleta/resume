<div class='card p-0'>
  <img class='img-top' src={{image}} alt='#' />
  <div class='card-body'>
    <h6 class='card-title'>{{title}}
      {{#if isHot}}
        <span
          class='badge text-bg-warning rounded-pill'
        >HOT!</span>
      {{/if}}
      {{#if isNew}}
        <span
          class='badge text-bg-primary rounded-pill'
        >Нове</span>
      {{/if}}
    </h6>
    <p class='mb-0'>{{description}}</p>
  </div>
</div>