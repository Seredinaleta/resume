{{#with footer}}
	<footer>
		<hr class="my-5">
		<div>
			{{#with social}}
			{{>link text=email.text href=email.href blank=true }}
			{{>link text=tel.text href=tel.href blank=true }}
			{{>link text=LinkedIn.text href=LinkedIn.href blank=true noline=true}}
			{{/with}}
		</div>
		
		<div class="my-3">Copyright by {{./name/firstname}} {{../header/name/lastname}}</div>
		
		<div>
			<address><em>{{../header/address}}</em></address>
		</div>
	</footer>
	{{/with}}