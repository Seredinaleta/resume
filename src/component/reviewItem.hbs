<div class="card p-3 mb-5">
      <div class="card">
        <div class="card-header">
          {{#with title}}
          <h5 class="card-title mb-0">{{userName}}</h5>
          <p class="card-subtitle mb-1 pt-1">{{caption}}</p>
          <time datetime="2023-01-01">{{date}}</time>
          {{/with}}
        </div>
      {{#with reviewBody}}      
        <div class="card-body">
          {{#with seller}}
          <p class="mb-3">{{title}}: {{value}}</p>
          {{/with}}
          {{#with rating}}
          <p class="mb-3">{{title}}: {{value}}</p>
          {{/with}}
          {{#each text}}
          <p class="mb-3">{{this}}</p>
          {{/each}}
          {{#with advantages}}
          <p class="mb-0"><b>{{title}}</b></p>
          <p class="mb-3">{{text}}</p>
          {{/with}}
          {{#with disadvantages}}
          <p class="mb-0"><b>{{title}}</b></p>
          <p class="mb-3">{{text}}</p>
          {{/with}}
          <div>
            {{#each images}}
            <img src={{this}} alt="#">
            {{/each}}
          </div>
        </div>
      </div>
        {{#each coments}}
        <div class="card ms-5 mt-3">
          <div class="card-body">
            <h5 class="card-title my-1-0">{{userName}}</h5>
            <time datetime="2023-01-01">{{date}}</time>
            <p class="mb-0">{{text}}</p>
          </div>
        </div>
        {{/each}}
      {{/with}}
  </div>   